@model DogWalk.Data.Models.ListOfWalksToSchedule

@{
    ViewBag.Title = "ScheduleWalksByDate";
}

<h2>ScheduleWalksByDate</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ListOfWalksToSchedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.StartDate, null, new { @class = "form-control datePicker" } )
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EndDate, null, new { @class = "form-control datePicker" })
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DaysToCheck, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var dayofWeek in (IEnumerable<SelectListItem>)ViewBag.DaysOfWeekList)
                {
                    @Html.CheckBox("dayOfWeek", new { value = dayofWeek.Text }) 
                    @Html.Label(dayofWeek.Text)    
                }
                @Html.ValidationMessageFor(model => model.DaysToCheck, "", new { @class = "text-danger" })
            </div>
        </div>

            
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
